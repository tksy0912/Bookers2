<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>error prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
        <div class="form_group">
          <div><label for="inputName">Name</label></div>
          <div><%= f.text_field :name, autofocus: true, id:"inputName" %></div>
        </div>
        <div class="form_group">
          <div><label for="inputImage">Image</label></div>
          <div><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></div>
        </div>
        <div class="form_group">
          <div><label for="inputIntroduction">Introduction</label></div>
          <div><%= f.text_field :introduction, id:"inputIntroduction"%></div>
        </div>
        <div class="form_group">
          <div><%= f.submit "Update User", class: "btn btn-secondary" %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>