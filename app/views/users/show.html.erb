<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', book: @book_new, user: @user %>
    </div>
    <div class="offset-md-1"></div>
    <div class="col-md-8">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Option</th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
    　       <td>
            　<%= link_to  do %>
        　      <%= image_tag book.user.get_profile_image(100,100) %>
              <% end %>
              <p><%= book.user.name %></p>
            </td>
    　       <td>
            　<%= link_to book_path(book.id) do %>
              　<%= book.title%>
            　<% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>