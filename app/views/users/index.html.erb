<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', book: @book, user: @user_info %>
    </div>
    <div class="offset-md-1 col-md-8">
      <h2>Book detail</h2>
      <table class="table">
        <thead>
          <th>Image</th>
          <th>Name</th>
          <th></th>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
    　       <td>
            　<%= link_to user_path(user.id) do %>
        　      <%= image_tag user.get_profile_image(100,100) %>
              <% end %>
            </td>
    　       <td>
    　         <p><%= user.name %></p>
            </td>
            <td><%= link_to 'Show', user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>