<h2>User info</h2>
<div>
  <%= image_tag user.get_profile_image(100,100) %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <p><%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
       <i class="fa-solid fa-user-gear grey-coloer"></i>
     <% end %></p>
</div>


<h2>New book</h2>
<%= form_with model: book do |f| %>

  <h6>Title</h6>
  <%= f.text_field :title %>
  
  <h6>Opinion</h6>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book', class: "btn btn-success" %>
  
 <% end %>