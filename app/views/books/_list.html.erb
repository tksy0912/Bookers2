<h2>User info</h2>
<div>
  <%= image_tag user.get_profile_image(100,100) %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <p><%= link_to edit_user_path(user) do %>
       <i class="fa-solid fa-user-gear" style="color: #999999;"></i>
     <% end %></p>
</div>


<h2>New book</h2>
<%= form_with model: book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
  
 <% end %>